---
import { ts } from '../i18n';
const { locale = 'es' } = Astro.props;
---

<section class="bg-card py-16">
  <div class="mx-auto max-w-4xl px-6 text-center space-y-6">
    <h2 class="text-3xl text-foreground md:text-4xl">
      {ts(locale, 'cta.title')}
    </h2>
    <p class="mx-auto max-w-2xl text-lg text-muted-fg">
      {ts(locale, 'cta.subtitle')}
    </p>
    <div class="flex flex-col items-center gap-2 pt-4">
      <p class="text-foreground font-semibold">{ts(locale, 'cta.email')}</p>
      <a href="https://cal.com/troopdegen/lets-build-together?duration=20" target="_blank" rel="noopener" class="text-primary font-semibold no-underline hover:underline">
        {ts(locale, 'cta.button')}
      </a>
    </div>
  </div>
</section>
