      {steps.map(({ key, emoji, color }) => (
        <div class="animate-fade-up rounded-2xl border-2 border-border bg-background p-6 transition-all hover:shadow-xl">
          <div class="mb-4 flex items-center gap-3">
            <span class={`inline-block rounded-lg ${color} px-3 py-1 font-space text-xs font-semibold tracking-wider text-white`}>
              {ts(locale, `journey.${key}.phase`)}
            </span>
            <span class="text-2xl">{emoji}</span>
          </div>
          <h3 class="mb-3 text-xl text-foreground">{ts(locale, `journey.${key}.title`)}</h3>
          <p class="text-sm leading-relaxed text-muted-fg">{ts(locale, `journey.${key}.desc`)}</p>
        </div>
      ))}
    </div>
  </div>
</section>
